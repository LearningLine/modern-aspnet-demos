@model Security2.Models.LoginModel

@{
    ViewBag.Title = "title";
}

<h2>Login</h2>

@using (Html.BeginForm())
{
    @Html.HiddenFor(m => m.ReturnUrl)
    <div class="input-group">
        <div>User Name</div>
        @Html.TextBoxFor(x => x.UserName)
    </div>
    <div class="input-group">
        <div>Password</div>
        @Html.PasswordFor(x => x.Password)
    </div>
    <button type="submit">Submit</button>
}
